        <Button x:Name="btnCadastroFonte" Content="Fonte" Margin="75,0,587,166" Click="btnFonte_Click" RenderTransformOrigin="-0.565,-0.01" Height="50" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="130" IsDefault="True" FontSize="20" Background="#FF2DA5D3"/>
        <Button x:Name="btnCadastroMemoria" Content="Memoria" Margin="75,0,587,111" Click="btnMemoria_Click" RenderTransformOrigin="-0.565,-0.01" Height="50" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="130" IsDefault="True" FontSize="20" Background="#FF2DA5D3"/>

    </Grid>
</Window>
