        xmlns:local="clr-namespace:WPFView"
        mc:Ignorable="d"
        Title="MainPeca" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnCadastroPlacaMae" Content="Placa Mãe" BorderBrush="Aqua"   Margin="75,0,587,331" Click="btnPlaca_Click" RenderTransformOrigin="-0.565,-0.01" Height="50" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="130" IsDefault="True" FontSize="20" Background="#FF2DA5D3" Padding="1,-1,1,1"/>
